<!DOCTYPE html>
<html lang="pl">
<head>
	<meta charset="UTF-8" />
	<meta http-equiv="X-UA-Compatible" content="IE=edge" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0" />
	<title>YourDent</title>
	<!-- @include links -->
</head>
<body>
    <main class="profile">
		<div class="wrapper">
			<div class="profile__container">
				<div class="profile__menu">
					<ul class="profile__buttons">
						<button class="profile__my-profile-btn" type="button"><i class="fa-regular fa-user profile__icon"></i>Mój profil</button>
						<button class="profile__edit-btn" type="button"><i class="fa-regular fa-share-from-square profile__icon"></i>Zmień dane</button>
						<button class="profile__visit-history-btn" type="button"><i class="fa-solid fa-clock-rotate-left profile__icon"></i>Historia wizyt</button>
						<button class="profile__change-pass-btn" type="btn"><i class="fa-solid fa-unlock profile__icon"></i>Zmień hasło</button>
						<button class="profile__logout-btn" type="button"><i class="fa-solid fa-arrow-right-from-bracket profile__icon"></i>Wyloguj się</button>
					</ul>
				</div>
				<div class="profile__my-profile-box">
					<div class="profile__user-box">
						<div class="profile__img"></div>
						<p class="profile__name"></p>
					</div>
					<div class="profile__data-box">
						<div class="profile__data profile__data--pesel">
							<h4 class="profile__data-title">Pesel:</h4>
							<p class="profile__data-text">1234-5678-9012</p>
						</div>
						<div class="profile__data profile__data--birth">
							<h4 class="profile__data-title">Data urodzenia:</h4>
							<p class="profile__data-text">01.01.1996</p>
						</div>
						<div class="profile__data profile__data--phone">
							<h4 class="profile__data-title">Numer telefonu:</h4>
							<p class="profile__data-text">12-123-456-789</p>
						</div>
						<div class="profile__data profile__data--place">
							<h4 class="profile__data-title">Miejsce zamieszkania:</h4>
							<p class="profile__data-text">Kraków</p>
						</div>
						<div class="profile__data profile__data--street">
							<h4 class="profile__data-title">Ulica:</h4>
							<p class="profile__data-text">Długa 1</p>
						</div>
						<div class="profile__data profile__data--postal-code">
							<h4 class="profile__data-title">Kod pocztowy:</h4>
							<p class="profile__data-text">00-000</p>
						</div>
						<div class="profile__data profile__data--email">
							<h4 class="profile__data-title">Adres email:</h4>
							<p class="profile__data-text">jankowalski@gmail.com</p>
						</div>
					</div>
				</div>
				<div class="profile__change-data-box">
					<div class="profile__change profile__change--name">
						<label for="changeName">Zmień imię:</label>
						<input type="text" id="changeName">
					</div>
				</div>
			</div>
		</div>
	</main>

    <!-- @include footer -->
    <script src="./dist/js/profile.min.js"></script>
</body>