<!DOCTYPE html>
<html lang="pl">
<head>
	<meta charset="UTF-8" />
	<meta http-equiv="X-UA-Compatible" content="IE=edge" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0" />
	<title>YourDent</title>
	<!-- @include links -->
</head>
<body>
	<!-- @include nav -->
    <main class="profile">
		<div class="wrapper">
			<div class="profile__box">
			<div class="profile__bg"></div>
			
			<div class="profile__container">
				<div class="profile__menu">
					<ul class="profile__buttons">
						<button class="profile__my-profile-btn" type="button"><i class="fa-regular fa-user profile__icon"></i>Mój profil</button>
						<button class="profile__edit-btn" type="button"><i class="fa-regular fa-share-from-square profile__icon"></i>Zmień dane</button>
						<button class="profile__history-btn" type="button"><i class="fa-solid fa-clock-rotate-left profile__icon"></i>Historia wizyt</button>
						<button class="profile__change-pass-btn" type="btn"><i class="fa-solid fa-unlock profile__icon"></i>Zmień hasło</button>
						<button class="profile__logout-btn" type="button"><i class="fa-solid fa-arrow-right-from-bracket profile__icon"></i>Wyloguj się</button>
					</ul>
				</div>
				<div class="profile__my-profile-box">
					<div class="profile__user-box">
						<div class="profile__img"></div>
						<p class="profile__name">Jan Kowalski</p>
					</div>
					<div class="profile__data-box">
						<div class="profile__data profile__data--pesel">
							<h4 class="profile__data-title">Pesel:</h4>
							<p class="profile__data-text">1234-5678-9012</p>
						</div>
						<div class="profile__data profile__data--birth">
							<h4 class="profile__data-title">Data urodzenia:</h4>
							<p class="profile__data-text">01.01.1996</p>
						</div>
						<div class="profile__data profile__data--phone">
							<h4 class="profile__data-title">Numer telefonu:</h4>
							<p class="profile__data-text">12-123-456-789</p>
						</div>
						<div class="profile__data profile__data--place">
							<h4 class="profile__data-title">Miejsce zamieszkania:</h4>
							<p class="profile__data-text">Kraków</p>
						</div>
						<div class="profile__data profile__data--street">
							<h4 class="profile__data-title">Ulica:</h4>
							<p class="profile__data-text">Długa 1</p>
						</div>
						<div class="profile__data profile__data--postal-code">
							<h4 class="profile__data-title">Kod pocztowy:</h4>
							<p class="profile__data-text">00-000</p>
						</div>
						<div class="profile__data profile__data--email">
							<h4 class="profile__data-title">Adres&nbsp;email:</h4>
							<p class="profile__data-text">jankowalski@gmail.com</p>
						</div>
					</div>
				</div>
				<form class="profile__change-data-box">
					<div class="profile__change profile__change--fname">
						<label for="changeFName" class="profile__change-label">Zmień imię:</label>
						<input type="text" id="changeName" class="profile__change-input">
					</div>
					<div class="profile__change profile__change--sname">
						<label for="changeSName" class="profile__change-label">Zmień nazwisko:</label>
						<input type="text" id="changeSName" class="profile__change-input">
					</div>
					<div class="profile__change profile__change--pesel">
						<label for="changeName" class="profile__change-label">Podaj nowy pesel:</label>
						<input type="number" id="changePesel" class="profile__change-input">
					</div>
					<div class="profile__change profile__change--phone">
						<label for="changeName" class="profile__change-label">Podaj nowy numer telefonu:</label>
						<input type="number" id="phone" class="profile__change-input">
					</div>
					<div class="profile__change profile__change--place">
						<label for="changeName" class="profile__change-label">Zmień&nbsp;miejsce&nbsp;zamieszkania:</label>
						<input type="text" id="changePlace" class="profile__change-input">
					</div>
					<div class="profile__change profile__change--street">
						<label for="changeName" class="profile__change-label">Zmień ulice:</label>
						<input type="text" id="changeStreet" class="profile__change-input">
					</div>
					<div class="profile__change profile__change--postalCode">
						<label for="changeName" class="profile__change-label">Zmień kod pocztowy:</label>
						<input type="number" id="changePostalCode" class="profile__change-input">
					</div>
					<div class="profile__change profile__change--email">
						<label for="changeName" class="profile__change-label">Podaj nowy adres email:</label>
						<input type="email" id="changeEmail" class="profile__change-input">
					</div>
					<button type="submit" class="profile__change-btn">Zapisz</button>
				</form>
				<div class="profile__visit-history-box">
					<table class="profile__visit-table">
						<thead class="profile__visit-table-head">
							<tr>
								<td class="profile__visit-table-heading">Rodzaj wizyty</td>
								<td class="profile__visit-table-heading">Termin</td>
								<td class="profile__visit-table-heading">Lekarz</td>
							</tr>
						</thead>
						<tbody class="profile__visit-table-body">
							<tr class="profile__visit-table-row">
								<td class="profile__visit-table-element">Konsultacja</td>
								<td class="profile__visit-table-element">23.12.22</td>
								<td class="profile__visit-table-element">Dominic</td>
							</tr>
							<tr class="profile__visit-table-row">
								<td class="profile__visit-table-element">Wybielanie zębów</td>
								<td class="profile__visit-table-element">12.11.22</td>
								<td class="profile__visit-table-element">Dominic</td>
							</tr>
							<tr class="profile__visit-table-row">
								<td class="profile__visit-table-element">Fluoryzacja</td>
								<td class="profile__visit-table-element">08.10.22</td>
								<td class="profile__visit-table-element">Rene</td>
							</tr>
						</tbody>
					</table>
				</div>
				<form class="profile__reset-box">
					<div class="profile__reset-input-box">
						<label for="oldPassword" class="profile__reset-label">Podaj stare hasło:</label>
						<input type="password" id="oldPassword" class="profile__reset-input">
						<p class="profile__reset-alert profile__reset-alert--old">Podano błędne hasło.</p>
					</div>
					<div class="profile__reset-input-box">
						<label for="changePassword" class="profile__reset-label">Podaj nowe hasło:</label>
						<input type="password" id="changePassword" class="profile__reset-input">
						<p class="profile__reset-alert"></p>
					</div>
					<div class="profile__reset-input-box">
						<label for="changePasswordRepeat" class="profile__reset-label">Powtórz hasło:</label>
						<input type="password" id="changePasswordRepeat" class="profile__reset-input">
						<p class="profile__reset-alert profile__reset-alert--change">Podane hasła nie są takie same.</p>
					</div>
					<p class="profile__reset-alert profile__reset-alert-corect">Pomyślnie zmieniono hasło.</p>
					<button type="button" class="profile__reset-btn">Zapisz</button>
				</form>
			</div>
		</div>
		</div>
	</main>
    <!-- @include footer -->
    <script src="./dist/js/profile.min.js"></script>
</body>