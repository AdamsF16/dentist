<!DOCTYPE html>
<html lang="pl">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>YourDent</title>
    <!-- @include links -->
</head>
<body>
    <!-- @include nav -->
    <main class="visit">
        <div class="wrapper">
            <div class="visit-container">
                <h1 class="visit__title">Umów wizytę</h1>
                <div class="visit__select-box">
                    <label for="doctors" class="visit__label"><i class="fa-solid fa-user-doctor visit__icon"></i>Wybierz lekarza</label>
                    <select name="doctor" id="doctors" class="visit__select--doctors">
                        <option value="" class="visit__option">--  Proszę wybrać lekarza  --</option>
                        <option value="Marianna" class="visit__option">Dr Marianna</option>
                        <option value="Renne" class="visit__option">Dr Renne</option>
                        <option value="Anett" class="visit__option">Dr Anett</option>
                        <option value="Dominic" class="visit__option">Dr Dominic</option>
                    </select> 
                </div>
                <div class="visit__select-box">
                    <label for="services" class="visit__label"><i class="fa-solid fa-notes-medical visit__icon"></i>Wybierz usługę</label>
                    <select name="service" id="services" class="visit__select--service">
                        <option value="" class="visit__option">--  Proszę wybrać rodzaj usługi  --</option>
                        <option value="consultation" class="visit__option">Konsultacja stomatologiczna -- 150zł</option>
                        <option value="control" class="visit__option">Wizyta kontrolna -- 100zł</option>
                        <option value="diagnostics" class="visit__option">Diagnostyka komputerowa -- od 100zł</option>
                        <option value="takingCare" class="visit__option">Stomatologia zachowawcza -- od 200zł</option>
                        <option value="aesthetic" class="visit__option">Stomatologia estetyczna -- od 300zł</option>
                        <option value="treatment" class="visit__option">Leczenie stomatologiczne -- od 300zł</option>
                        <option value="rootTreatment" class="visit__option">Leczenie kanałowe -- od 600zł</option>
                        <option value="denture" class="visit__option">Protezy -- od 1000zł</option>
                        <option value="braces" class="visit__option">Zakładanie aparatu ortodontycznego -- od 1500zł</option>
                    </select>
                </div>
                <div class="visit__date-box">
                    <div class="visit__date-day">
                        <h4 class="visit__date-title">Wybierz termin</h4>
                        <label for="time" class="visit__label"><i class="fa-regular fa-calendar-days visit__icon"></i>Pokaż wolne terminy od:</label>
                        <input type="date" id="time" class="visit__input-date">
                        <label for="timeEnd">do:</label>
                        <input type="date" id="timeEnd" class="visit__input-date">
                        <button class="visit__date-btn">Pokaż</button>
                    </div>
                </div>
                <div class="visit__table-box">
                    <table class="visit__table">
                        <thead class="visit__table-head">
                            <tr>
                                <td class="visit__table-day">Dzień</td>
                                <td class="visit__table-day">Godzina</td>
                                <td class="visit__table-day">Lekarz</td> 
                                <!-- NIE WIEM CZY LEKARZ MA BYC WYBIERANY W INPUCIE CZY W DACIE WIEC DAJE NARAZIE TU I TU -->
                                <td class="visit__table-empty">Wybierz</td>
                            </tr>
                        </thead>
                        <tbody class="visit__table-body">
                            <tr>
                                <td>02.02.2023</td>
                                <td>8:00</td>
                                <td>Renne</td>
                                <td><button class="visit__date-choose"></button></td>
                            </tr>
                            <tr>
                                <td>02.02.2023</td>
                                <td>9:00</td>
                                <td>Renne</td>
                                <td><button class="visit__date-choose"></button></td>
                            </tr>
                            <tr>
                                <td>02.02.2023</td>
                                <td>10:00</td>
                                <td>Renne</td>
                                <td><button class="visit__date-choose"></button></td>
                            </tr>
                            <tr>
                                <td>02.02.2023</td>
                                <td>11:00</td>
                                <td>Renne</td>
                                <td><button class="visit__date-choose"></button></td>
                            </tr>
                        </tbody>
                    </table>
                </div>
                <button class="visit__btn-confirm"></button>
            </div>
        </div>
    </main>

    <!-- @include footer -->
    <script src="./dist/js/visit.min.js"></script>
</body>