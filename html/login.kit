<!DOCTYPE html>
<html lang="pl">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>YourDent</title>
    <!-- @include links -->
</head>
<body>
    <!-- @include nav -->
    <main class="login">
        <section class="login__container">
            <div class="wrapper">
                <h1 class="login__title">Zaloguj się na swoje konto</h1>
                <div class="login__box">
                    <label for="login" class="login__label">Adres email:</label>
                    <input type="email" id="login" class="login__input">
                    <label for="password" class="login__label">Hasło:</label>
                    <input type="password" id="password" class="login__input">
                    <button class="login__btn">Zaloguj się</button>
                    <!-- poniżej alert jak beda błedne dane, nadane jest display none -->
                    <p class="login__alert">Niepoprawna nazwa użytkownika lub hasło</p>
                </div>
                <div class="login__text-box">
                    <a href="password.html" class="login__text--link">Nie pamiętasz hasła?</a>
                    <p class="login__text">Nie masz jeszcze konta? <a href="register.html" class="login__text--link">Zarejestruj się</a></p>
                </div>
            </div>
        </section>
    </main>

    <!-- @include footer -->
    <script src="./dist/js/login.min.js"></script>
</body>
</html>