<!DOCTYPE html>
<html lang="pl">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>YourDent</title>
    <!-- @include links -->
</head>
<body>
    <!-- @include nav -->
    <main class="register">
        <section class="register__container">
            <div class="wrapper">
                <h1 class="register__title">Zarejestruj się</h1>
                <form class="register__box-main">
                    <label for="fname" class="register__label">Imię:</label>
                    <input type="fname" id="fname" class="register__input">
                     <!-- ALERT-->
                     <p class="register__alert">Proszę uzupełnić to pole.</p>
                     <!-- ALERT-->

                    <label for="lname" class="register__label">Nazwisko:</label>
                    <input type="lname" id="lname" class="register__input">
                    <!-- ALERT-->
                    <p class="register__alert">Proszę uzupełnić to pole.</p>
                    <!-- ALERT-->
                    
                    <label for="pesel" class="register__label">Pesel:</label>
                    <input type="number" id="pesel" class="register__input">
                    <!-- ALERT-->
                    <p class="register__alert">Proszę uzupełnić to pole.</p>
                    <!-- ALERT-->

                    <label for="bdate" class="register__label">Data urodzenia:</label>
                    <input type="date" id="bdate" class="register__input">
                    <!-- ALERT-->
                    <p class="register__alert">Proszę uzupełnić to pole.</p>
                    <!-- ALERT-->

                    <label for="phone" class="register__label">Numer telefonu:</label>
                    <input type="number" id="phone" class="register__input">
                    <!-- ALERT-->
                    <p class="register__alert">Proszę uzupełnić to pole.</p>
                    <!-- ALERT-->

                    <label for="city" class="register__label">Miasto:</label>
                    <input type="text" id="city" class="register__input">
                    <!-- ALERT-->
                    <p class="register__alert">Proszę uzupełnić to pole.</p>
                    <!-- ALERT-->

                    <label for="street" class="register__label">Ulica:</label>
                    <input type="text" id="street" class="register__input">
                    <!-- ALERT-->
                    <p class="register__alert">Proszę uzupełnić to pole.</p>
                    <!-- ALERT-->

                    <label for="houseNumber" class="register__label">Numer mieszkania:</label>
                    <input type="text" id="houseNumber" class="register__input">
                    <!-- ALERT-->
                    <p class="register__alert">Proszę uzupełnić to pole.</p>
                     <!-- ALERT-->

                    <label for="postCode" class="register__label">Kod pocztowy:</label>
                    <input type="text" id="postCode" class="register__input">
                    <!-- ALERT-->
                    <p class="register__alert register__alert-postcode">Proszę uzupełnić to pole.</p>
                    <!-- ALERT-->

                    <label for="regEmail" class="register__label">Adress email:</label>
                    <input type="email" id="regEmail" class="register__input register__input--alert">
                     <!-- ALERT-->
                    <p class="register__alert register__alert-email">Proszę podać poprawny adres email.</p>
                    <!-- ALERT-->

                    <label for="regPassword" class="register__label">Hasło:</label>
                    <input type="password" id="regPassword" class="register__input">
                    <!-- ALERT-->
                    <p class="register__alert">Proszę uzupełnić to pole.</p>
                    <!-- ALERT-->

                    <label for="confRegPassword" class="register__label">Powtórz hasło:</label>
                    <input type="password" id="confRegPassword" class="register__input register__input--alert">
                     <!-- ALERT-->
                     <p class="register__alert register__alert-password">Podane hasła nie są takie same.</p>
                     <!-- ALERT-->

                    <div class="register__box-checkbox">
                        <input type="checkbox" class="register__input-checkbox" id="rules">
                        <label for="rules" class="register__input-checkbox-info">Zapoznałem(-am) się z regulaminem i akceptuję warunki korzystania z serwisu.</label>
                    </div>
                    <button class="register__btn" name="data" type="button" onclick="getData()">Zarejestruj się</button>
                    <div class="register__popup">
                        <p class="register__popup-text">Formularz został poprawnie wysłany!</p>
                        <button class="register__popup-btn" type="button">Zamknij</button>
                    </div>
                </form>
            </div>
        </section>
    </main>
    

    <!-- @include footer -->
    <script src="./dist/js/register.min.js"></script>
</body>