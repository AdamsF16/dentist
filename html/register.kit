<!DOCTYPE html>
<html lang="pl">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>YourDent</title>
    <!-- @include links -->
</head>
<body>
    <!-- @include nav -->
    <main class="register">
        <section class="register__container">
            <div class="wrapper">
                <h1 class="register__title">Zarejestruj się</h1>
                <div class="register__box-main">
                    <label for="fname" class="register__label">Imię:</label>
                    <input type="fname" id="fname" class="register__input">

                    <label for="lname" class="register__label">Nazwisko:</label>
                    <input type="lname" id="lname" class="register__input">
                    
                    <label for="pesel" class="register__label">Pesel:</label>
                    <input type="number" id="pesel" class="register__input">

                    <label for="bdate" class="register__label">Data urodzenia:</label>
                    <input type="date" id="bdate" class="register__input">

                    <label for="phone" class="register__label">Numer telefonu:</label>
                    <input type="number" id="phone" class="register__input">

                    <label for="city" class="register__label">Miasto:</label>
                    <input type="text" id="city" class="register__input">

                    <label for="street" class="register__label">Ulica:</label>
                    <input type="text" id="street" class="register__input">

                    <label for="houseNumber" class="register__label">Numer mieszkania:</label>
                    <input type="text" id="houseNumber" class="register__input">

                    <label for="postCode" class="register__label">Kod pocztowy:</label>
                    <input type="number" id="postCode" class="register__input">

                    <label for="regEmail" class="register__label">Adress email:</label>
                    <input type="email" id="regEmail" class="register__input">

                    <label for="regPassword" class="register__label">Hasło:</label>
                    <input type="password" id="regPassword" class="register__input">

                    <label for="confRegPassword" class="register__label">Powtórz hasło:</label>
                    <input type="password" id="confRegPassword" class="register__input">

                    <div class="register__box-checkboxes">
                        <input type="checkbox" class="register__input-checkbox" id="rules">
                        <label for="rules">Zapoznałem(-am) się z regulaminem i akceptuję warunki korzystania z serwisu.</label>

                        <input type="checkbox" class="register__input-checkbox" id="regNewsletter">
                        <label for="regNewsletter">Zapisz się na newsletter.</label>
                    </div>

                    <button class="register__btn">Zarejestruj się</button>
                </div>
            </div>
        </section>
    </main>
    

    <!-- @include footer -->
    <script src="./dist/js/script.min.js"></script>
</body>